                                </div>
                            </figcaption>
                        </figure>
                    </div>
                </div>
            </div>*@

    </div>
</div>

<script>

    $(document).ready(function () {

        $('#txtCnpj').focus();

        $('a').click(function (e) {

            var abaClicada = e.target.id;

            if (abaClicada == "cnpj")
            {
                setTimeout(function () {
                    $('#txtCnpj').focus();
                }, 1);
            }
            else if (abaClicada == "razaoSocial")
            {
                setTimeout(function () {
                    $('#txtRs').focus();
                }, 1);
            }
            else if (abaClicada == "telefone")
            {
                setTimeout(function () {
                    $('#txtDdd').focus();
                }, 1);
            }

        });

    });

</script>