<script>

    $(document).ready(function () {

        $('#btnCpf, #btnName, #btnTel').on('click', function () {

            $('#divPj').fadeOut(500);
            $('#divVehicle').fadeOut(500);
            $('#divFtp').fadeOut(500);
            $('#pfCpf').delay(600).fadeIn(500);
            $('#pfCpf').focus();
            $('#btnBack').fadeIn(800);

        });

        $('#btnAddr').on('click', function () {
            $('#pfCpf').fadeOut(500);
            $('#pfAddr').delay(500).fadeIn(500);
        });

        $('#btnBack').on('click', function () {

            $('#divPj').fadeIn(1000);
            $('#divVehicle').fadeIn(1000);
            $('#divFtp').fadeIn(1000);
            $('#pfCpf').fadeOut(800);
            $('#btnBack').fadeOut(800);

        });

    });

</script>