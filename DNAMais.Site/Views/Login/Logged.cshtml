        <div class="col-md-6" hidden="hidden" id="pfCpf">
            <label>CPF</label>
            <input type="text" class="form-control" id="txtCpf" />
            <input type="button" value="Pesquisar" class="btn btn-default" />
        </div>

        <div class="col-md-6" hidden="hidden" id="pfAddr">
            <label>Endereço</label>
            <input type="text" class="form-control" id="txtAddr" />
            <input type="button" value="Pesquisar" class="btn btn-default" />
        </div>
        
        <div class="col-md-12">
            <input type="button" id="btnBack" value="Voltar" class="btn btn-primary" hidden="hidden"  />
        </div>

