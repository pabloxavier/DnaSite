@{
    ViewBag.Title = "DNA+ | Blog";
}

@Html.Partial("_TitleBarBlogList")
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="blog-posts">
                @Html.Partial("_PostsBlogList")
                @Html.Partial("_PaginationBlogList")
            </div>
        </div>
        <div class="col-md-3">
            <aside class="sidebar">
                @Html.Partial("_SearchBlogList")
                @Html.Partial("_CategoriesBlogList")
                @Html.Partial("_PopularRecentTabsBlogList")
                @Html.Partial("_FacebookPluginBlogList")
            </aside>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#blogMenu").addClass("active");
    });

</script>
