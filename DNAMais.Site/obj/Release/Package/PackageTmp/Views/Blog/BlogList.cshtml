@{
    ViewBag.Title = "DNA+ | Blog";
}

@Html.Partial("Blog/List/_TitleBarBlogList")
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="blog-posts">
                @Html.Partial("Blog/List/_PostsBlogList")
                @Html.Partial("Blog/List/_PaginationBlogList")
            </div>
        </div>
        <div class="col-md-3">
            <aside class="sidebar">
                @Html.Partial("Blog/List/_SearchBlogList")
                @Html.Partial("Blog/List/_CategoriesBlogList")
                @Html.Partial("Blog/List/_PopularRecentTabsBlogList")
                @Html.Partial("Blog/List/_FacebookPluginBlogList")
            </aside>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $("#blogMenu").addClass("active");
    });

</script>
